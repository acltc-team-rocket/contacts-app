<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1>New Contact</h1>
    <%= form_tag "/contacts", method: :post do %>
      <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag :first_name, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :middle_name %>
        <%= text_field_tag :middle_name, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name %>
        <%= text_field_tag :last_name, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :phone_number %>
        <%= text_field_tag :phone_number, "", class: "form-control" %>
      </div>
      <div>
        <%= submit_tag "Create Contact", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>