<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <h1>Contacts</h1>
  <p><%= link_to "Add Contact", "/contacts/new" %></p>
    <table class="table">
      <tr>
        <th>Full Name</th>
        <th>Phone Number</th>
        <th>Updated At:</th>
      </tr>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= link_to contact.full_name, "/contacts/#{contact.id}" %></td>
          <td><%= contact.phone_number_plus_jp_prefix %></td>
          <td><%= contact.friendly_time %></td>
        </tr>
      <% end %>

    </table>
  </div>
  
</div>
